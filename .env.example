# Environment variables for Docker deployment
# Copy this file to .env and update with your values

# MongoDB Atlas Connection (recommended for production)
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/blog-web-application?retryWrites=true&w=majority

# JWT Secret (generate a strong secret)
JWT_SECRET=your-super-secure-jwt-secret-key-here

# Server Port
PORT=5000

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Optional: If using local MongoDB instead of Atlas
# MONGO_URI=mongodb://admin:password@mongodb:27017/blog-web-application?authSource=admin